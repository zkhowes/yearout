# =============================================================================
# Copy this file to .env.local and fill in your values
# Production values live in Vercel dashboard → Settings → Environment Variables
# =============================================================================

# Database — Neon (neon.tech)
DATABASE_URL=

# Auth.js — generate with: npx auth secret
AUTH_SECRET=

# Google OAuth — console.cloud.google.com
# Dev redirect:  http://localhost:3003/api/auth/callback/google
# Prod redirect: https://yearout.zkhowes.fun/api/auth/callback/google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Apple Sign In — developer.apple.com
# Dev redirect:  http://localhost:3003/api/auth/callback/apple
# Prod redirect: https://yearout.zkhowes.fun/api/auth/callback/apple
APPLE_ID=
APPLE_SECRET=

# Vercel Blob — vercel.com/dashboard → Storage → Blob
BLOB_READ_WRITE_TOKEN=

# Resend — resend.com
RESEND_API_KEY=

# Claude API — console.anthropic.com
ANTHROPIC_API_KEY=

# Super Admin second-factor password
ADMIN_PASSWORD=

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3003
